<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Products</h1>

  <table>
    <thead>
      <tr>
        <th>Image</th>
        <th>Content</th>
        <th>Price</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr class="<%= cycle('list_line_odd', 'list_line_even') %>" >
          <td class="image">
            <% if product.image_url.present? %>
              <%= image_tag(product.image_url, class: 'list_image')%>
            <% end %>
          </td>

          <td><h3><%= product.title %></h3> <br> <%= truncate(strip_tags(product.description), length: 100) %></td>
          <td>R$ <%= product.price %></td>
          <td>
            <ul>
              <li> <%= link_to 'Show', product %> </li>
              <li> <%= link_to 'Edit', edit_product_path(product) %> </li>
              <li> <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %> </li>
            </ul>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Product', new_product_path %>
</div>
