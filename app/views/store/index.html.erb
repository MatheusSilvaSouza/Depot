<h1>Store#index</h1>

<ul class="catalog">
  <% cache @all_products do %>
    <% @all_products.each do |product| %>
      <% cache product do %>
        <li>
          <%= image_tag(product.image_url) %>
          <h3><%= link_to(product.title, product) %></h3>
          <p><%= product.description %></p>
          <div class="price"><%= number_to_currency(product.price) %></div>
        </li>
      <% end %>
    <% end %>
  <% end %>
</ul>
