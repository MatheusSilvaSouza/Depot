<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title || 'Depot' %></title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class='main'>
      <%= image_tag 'Logo.png', alt: 'umanni depot' %>
      <h1> <%= @page_title %> </h1>
    </header>
    <section class='content'>
      <nav class="side_nav">
        <ul>
          <li><a href="/">Home</a></li>
          <li><%= link_to 'Catalog', catalog_url %></li>
          <li>Search</li>
          <li>Exit</li>
        </ul>
      </nav>

      <main class="<%= controller.controller_name %>">
        <%= yield %>
      </main>
    </section>
  </body>
</html>
